---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "Lohyna Wrestling Academy";
---

<BaseLayout pageTitle={pageTitle}>
  <main class="h-screen w-full flex overflow-x-hidden">
    <!-- Section 1 -->
    <section
      class="min-w-full h-full flex items-center justify-center snap-start"
    >
      <h1 class="text-white text-4xl font-bold">Welcome to Our Club</h1>
    </section>

    <!-- Section 2 -->
    <section
      class="min-w-full h-full flex items-center justify-center snap-start
        dark:bg-slate-500"
    >
      <h1 class="text-white text-4xl font-bold">Train with Us</h1>
    </section>

    <!-- Section 3 -->
    <section
      class="min-w-full h-full flex items-center justify-center snap-start
        dark:bg-yellow-500"
    >
      <h1 class="text-white text-4xl font-bold">Join the Team</h1>
    </section>
  </main>
  <script>
    import "../scripts/horizontalScroll.js";
  </script>
</BaseLayout>
